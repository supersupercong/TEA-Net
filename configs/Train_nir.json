{
    "name": "nir",
    "experim_name": "Experiments/NIR",
    "net": "MambaFusion",
    "loss": "Loss_Nir",
    "tags": "EXP0",
    "train_dataset": "nirscene",
    "train_batch_size": 1,
    "num_workers": 16,
    "scale":1,
    "save_path":"./save_images/",
    
    "MambaFusion":{
        "num_channels_ir":1,
        "num_channels_vis":1,
        "base_filter":32
    },

    "optimizer": {
        "type": "ADAM",
        "args":{
            "lr": 2e-4,
            "weight_decay":0,
            "momentum": 0.999
        },
        "sheduler":"CosineAnnealingLR",
        "sheduler_set":{
            "step_size": 1000,
            "gamma": 0.5
        }
    },

    "trainer": {
        "total_epochs": 10000,
        "test_freq": 10,
        "save_top_k": 100
    },


    "nirscene": {
        "data_dir": {
            "train_dir":{
                "data_dir_A":"./data/nirscene/train/nir",
                "data_dir_B":"./data/nirscene/train/rgb"
                        },
            "val_dir":{
                "data_dir_A":"./data/nirscene/test/nir",
                "data_dir_B":"./data/nirscene/test/rgb"
            }
                    },
        "max_value": 255.0,
        "patch_size" : 128,
        "data_augmentation":true
     
    }
}