{
    "name": "mff",
    "experim_name": "Experiments/MFF",
    "net": "MambaFusion",
    "loss": "Loss_Mff",
    "tags": "EXP0",
    "train_dataset": "MFI",
    "train_batch_size": 1,
    "num_workers": 16,
    "scale":1,
    "save_path":"./save_images/",
    
    "MambaFusion":{
        "num_channels1":1,
        "num_channels2":1,
        "base_filter":32
    },

    "optimizer": {
        "type": "ADAM",
        "args":{
            "lr": 2e-4,
            "weight_decay":0,
            "momentum": 0.999
        },
        "sheduler":"CosineAnnealingLR",
        "sheduler_set":{
            "step_size": 100,
            "gamma": 0.5
        }
    },

    "trainer": {
        "total_epochs": 10000,
        "test_freq": 20,
        "save_top_k": 100
    },


    "MFI": {
        "data_dir": {
            "train_dir":{
                "data_dir_A":"data/MFI-WHU/source_1" ,
                "data_dir_B":"data/MFI-WHU/source_2"
        },
            "val_dir":{
                "data_dir_A":"data/LytroDataset/A" ,
                "data_dir_B":"data/LytroDataset/B"
            }
                    },
        "max_value": 255.0,
        "patch_size" : 128,
        "data_augmentation":true
     
    }
}